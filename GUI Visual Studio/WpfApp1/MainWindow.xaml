<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Backup erstellen" Height="450" Width="800">
    <Grid>
        <StackPanel RenderTransformOrigin="0.511,0.509">
            <Label>
                Wählen sie den Quellpfad aus
            </Label>
            <TextBox Name="topSrc" />
            <Button Name="choicetop">Pfad auswählen</Button>
        </StackPanel>
        <StackPanel  Margin="5,93,-0.4,260">
            <Label>
                Wählen sie den Zielpfad aus
            </Label>
            <TextBox Name="topBck" />
            <Button Name="choicebck">Pfad auswählen</Button>
        </StackPanel>
        <StackPanel Margin="5,348,-0.4,0">
            <Button x:Name="btnAdd" Margin="0,5,0,0">Bestätigen</Button>
        </StackPanel>
    </Grid>
</Window>
